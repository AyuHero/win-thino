<Window x:Class="wpf_winthino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_winthino"
        mc:Ignorable="d"
        Title="MainWindow" Height="60" Width="60" WindowStyle="None" AllowsTransparency="True" Background="Transparent" x:Name="from1" MouseLeftButtonDown="from1_MouseLeftButtonDown">
    <Border Background="White" CornerRadius="15" >
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="直接发送"  />
                <MenuItem Header="设置"  />
                <MenuItem Header="退出" Click="closem_Click" />
            </ContextMenu>
        </Border.ContextMenu>
        <StackPanel HorizontalAlignment="Center">
            <Border Background="Green" Height="4" Width="4" Margin="0,10,0,5"/>
            <TextBlock Text="Thino" Margin="0,3,0,0" FontSize="15"/>
        </StackPanel>
        
    </Border>
</Window>
